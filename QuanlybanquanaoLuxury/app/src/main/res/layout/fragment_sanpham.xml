<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.sanpham.Fragment_sanpham"
    android:orientation="vertical"
    android:background="#F1EDED">

    <LinearLayout
android:gravity="center"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">


        <com.google.android.material.textfield.TextInputLayout
            android:paddingTop="5dp"
       android:layout_gravity="center"
            android:id="@+id/input_search"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Search"
            app:layout_constraintTop_toBottomOf="@+id/tv_title">

            <com.google.android.material.textfield.TextInputEditText
        android:layout_gravity="center"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:drawableStart="@drawable/baseline_search_24"></com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

<!--  <androidx.recyclerview.widget.RecyclerView-->
<!--      android:layout_width="match_parent"-->
<!--      android:layout_height="100dp"-->
<!--      android:id="@+id/rcv_homefrag"/>-->

    <HorizontalScrollView
        android:id="@+id/hztSv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_ao"
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"

                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/ibtn_ao"
                        android:layout_gravity="center"
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/mlb_ao"
                        android:padding="5dp" />

                    <TextView
                        android:id="@+id/tv_shirt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Shirt"
                        android:textColor="#FF6F00"
                        android:textSize="20dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="10dp"
                android:id="@+id/cv_q">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <ImageButton
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:id="@+id/ibtn_q"
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:background="@drawable/mlb_q"
                        android:padding="5dp" />

                    <TextView
                        android:id="@+id/tv_quan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Quần"
                        android:textColor="#FF6F00"
                        android:textSize="20dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="10dp"
                android:id="@+id/cv_giay">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageButton
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:id="@+id/ibtn_giay"
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:background="@drawable/nike"
                        android:padding="5dp" />

                    <TextView
                        android:id="@+id/tv_giay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Giày"
                        android:textColor="#FF6F00"
                        android:textSize="20dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </HorizontalScrollView>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/frag_ctn_sp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

    </androidx.fragment.app.FragmentContainerView>



</LinearLayout>